{
  "extends": "@tsconfig/react-native/tsconfig.json",
   "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "tests": ["tests/*"],
      "@components/*": ["src/components/*"],
    },
  "compilerOptions": {
    "types" : ["node", "lodash", "express"],
    "isolatedModules": false,
    "lib": [
      "dom"
    ]
  },
  "typeRoots": ["./node_modules/@types","./@types", "./src/types" ],
  "include": ["/**/*.ts", "/**/*.d.ts"]
}
